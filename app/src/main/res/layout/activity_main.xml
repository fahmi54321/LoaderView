<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_icon"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"></com.elyeproj.loaderviewlibrary.LoaderImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_text"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/image_icon"
            android:layout_toRightOf="@id/image_icon"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtName"
                android:textSize="15sp"
                android:textStyle="bold"
                app:height_weight="0.8"
                app:use_gradient="true"
                app:width_weight="0.6"></com.elyeproj.loaderviewlibrary.LoaderTextView>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                app:height_weight="0.8"
                app:use_gradient="true"
                app:width_weight="1.0"></com.elyeproj.loaderviewlibrary.LoaderTextView>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/image_icon1"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"></com.elyeproj.loaderviewlibrary.LoaderImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_text1"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/image_icon1"
            android:layout_toRightOf="@id/image_icon1"
            android:orientation="vertical">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtName1"
                android:textSize="15sp"
                android:textStyle="bold"
                app:height_weight="0.8"
                app:use_gradient="true"
                app:width_weight="0.6"></com.elyeproj.loaderviewlibrary.LoaderTextView>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle1"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                app:height_weight="0.8"
                app:use_gradient="true"
                app:width_weight="1.0"></com.elyeproj.loaderviewlibrary.LoaderTextView>

        </LinearLayout>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btnReset"
        android:layout_marginTop="16dp"></Button>

</LinearLayout>